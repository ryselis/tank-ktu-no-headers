<Page
    x:Class="TankWinTablet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TankWinTablet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="onOffButton" Content="On/Off" HorizontalAlignment="Left" Margin="123,308,0,0" VerticalAlignment="Top"                             />
        <Button x:Name="turretleftButton" Content="Turret Left" HorizontalAlignment="Left" Margin="14,403,0,0" VerticalAlignment="Top" />
        <Button x:Name="forwardButton" Content="Forward" HorizontalAlignment="Left" Margin="117,403,0,0" VerticalAlignment="Top"/>
        <Button x:Name="turretRightButton" Content="Turret Right" HorizontalAlignment="Left" Margin="206,403,0,0" VerticalAlignment="Top"/>
        <Button x:Name="goLeftButton" Content="Left" HorizontalAlignment="Left" Margin="57,446,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.044,3.898" />
        <Button x:Name="goRightButton" Content="Right" HorizontalAlignment="Left" Margin="206,446,0,0" VerticalAlignment="Top"/>
        <Button x:Name="gunLiftButton" Content="Gun Lift" HorizontalAlignment="Left" Margin="117,351,0,0" VerticalAlignment="Top"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="127,489,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.47,0.447"/>
        <Button x:Name="fireButton" Content="Fire" HorizontalAlignment="Left" Margin="134,446,0,0" VerticalAlignment="Top" Background="#FFCD1E1E"/>
        <ListView HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="159,195,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="840"/>
        <Button x:ConnectionId='2' x:Name="turretleftButton_Copy" Content="Turret Left" HorizontalAlignment="Left" Margin="14,597,0,0" VerticalAlignment="Top"                                  />
        <Button x:ConnectionId='3' x:Name="forwardButton_Copy" Content="Forward" HorizontalAlignment="Left" Margin="112,597,0,0" VerticalAlignment="Top"                                />
        <Button x:ConnectionId='4' x:Name="turretRightButton_Copy" Content="Turret Right" HorizontalAlignment="Left" Margin="206,597,0,0" VerticalAlignment="Top"                                   />
        <Button x:ConnectionId='5' x:Name="goLeftButton_Copy" Content="Left" HorizontalAlignment="Left" Margin="57,640,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.044,3.898"                            />
        <Button x:ConnectionId='6' x:Name="goRightButton_Copy" Content="Right" HorizontalAlignment="Left" Margin="206,640,0,0" VerticalAlignment="Top"                             />
        <Button x:ConnectionId='7' x:Name="gunLiftButton_Copy" Content="Gun Lift" HorizontalAlignment="Left" Margin="30,683,0,0" VerticalAlignment="Top"                           />
        <Button x:ConnectionId='8' x:Name="backButton_Copy" Content="Back" HorizontalAlignment="Left" Margin="127,683,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.47,0.447"                                />
        <Button x:ConnectionId='9' x:Name="fireButton_Copy" Content="Fire" HorizontalAlignment="Left" Margin="206,683,0,0" VerticalAlignment="Top" Background="#FFCD1E1E" RenderTransformOrigin="0.703,3.974"                            />
        <Button x:ConnectionId='10' x:Name="stopButton_Copy" Content="Stop" HorizontalAlignment="Left" Margin="123,640,0,0" VerticalAlignment="Top" Background="#FFCD1E1E" RenderTransformOrigin="0.703,3.974"                            />

    </Grid>
</Page>

